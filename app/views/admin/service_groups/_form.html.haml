= form_for [:admin, @service_group] do |f|
  = f.error_messages
  .fieldSet.u-margin-2x
    .row
      .col.col--10
        %dl.fieldSet__field.u-margin
          %dt.fieldSet__label= f.label :name
          %dd.fieldSet__input= f.text_field :name, :class => 'textInput', :autofocus => @service_group.new_record?, :required => true

  .formButtons
    - unless @service_group.new_record?
      .formButtons__secondary= link_to "Delete Group", [:admin, @service_group], :class => 'button button--grey button--solid', :method => :delete, :data => {:confirm => "Are you sure you wish to delete #{@service_group.name}?"}
    = f.submit "Save Group", :class => 'button button--solid'
    = link_to "Cancel", admin_service_groups_path, :class => 'button button--lightGrey'

